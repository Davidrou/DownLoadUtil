<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <!--文件名 -->
    <TextView
        android:id="@+id/textview_downloadfragment_item_fileName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
    <!-- 进度条 -->
    <ProgressBar
        android:layout_width="fill_parent"
        android:layout_height="20dip"
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/progress_downloadfragment_item_downloadbar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textview_downloadfragment_item_finfish_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0M"
            />
        <TextView
            android:id="@+id/textview_downloadfragment_item_total_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/0.0M"
            />

        <TextView
            android:id="@+id/textview_downloadfragment_item_speed"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0kb/s"
            />
        <TextView
            android:id="@+id/textview_downloadfragment_item_status"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textColor="#123456"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <!-- 下载按钮 -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:id="@+id/button_downloadfragment_item_cancel"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂停"
            android:id="@+id/button_downloadfragment_item_pause"/>
    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/textview_downloadfragment_item_resultView" />
</LinearLayout>